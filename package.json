{
  "name": "bistro-shifts-monorepo",
  "private": true,
  "scripts": {
    "dev:all": "npx concurrently -k -p \"[{name}]\" -n server,client \"npm:dev --prefix server\" \"npm:dev --prefix client\"",
    "dev:server": "npm --prefix server run dev",
    "dev:client": "npm --prefix client run dev"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  },
  "scripts": {
    "test:all": "npm --prefix server run test && npm --prefix server run e2e && npm --prefix client run e2e:ui"
  }
}
