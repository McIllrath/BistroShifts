# Copy this file to `.env` and fill in secure production values. Do NOT commit secrets.

# Database
# Example: postgres://user:password@db:5432/dbname
DATABASE_URL=postgres://bistro:CHANGEME_PASSWORD@db:5432/bistro
DATABASE_CLIENT=pg

# JWT secret used to sign tokens. Use a long random value.
JWT_SECRET=CHANGEME_LONG_RANDOM_SECRET

# Server
NODE_ENV=production
PORT=4000
# Copy to .env and adjust values for your environment
# Secret used to sign JWTs - change in production!
JWT_SECRET=replace-me-with-a-strong-secret
PORT=3000
# Optional: override path to sqlite database file
# DATABASE_FILE=./db/database.sqlite
