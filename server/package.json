{
  "name": "weekend-shifts-server",
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:prod": "node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "init-db": "node scripts/init_db.js",
    "migrate": "knex migrate:latest --knexfile knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.js",
    "open-db": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\open_db.ps1",
    "seed-shift": "node scripts/seed_shift.js",
    "seed-all": "node scripts/seed_users_and_shifts.js",
    "db:recreate": "node scripts/create_fresh_sqlite.js",
    "db:clear": "node scripts/clear_all_data.js",
    "db:list": "node scripts/list_tables.js",
    "e2e": "node e2e.js",
    "test": "mocha --recursive --exit",
    "build:client": "npm --prefix ../client run build",
    "build": "npm run build:client && node scripts/copy_client_build.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.5.1",
    "nodemailer": "^7.0.11",
    "pg": "^8.10.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "cross-env": "^10.1.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3"
  }
}
